package Example;

import java.util.Scanner;

public class Kelimeler {

public static void main(String[] args) {

Scanner scan=new Scanner(System.in);

System.out.println("Lütfen karakter veya giriniz:");

String kelime=scan.nextLine();

int flength = kelime.length();

char [] ilkDizi = new char [flength];

ilkDizi = kelime.toCharArray();

for (int i=0; i<kelime.length();i++)

{

for (int k=i;k<=kelime.length();k++) { //her satırda bosluk

System.out.print(" ");

}

for (int j=0; j <= i; j++) {

System.out.print(ilkDizi[j]+" ");

}

System.out.println("");

}

}

}


